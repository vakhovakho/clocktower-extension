{
  "manifest_version": 3,
  "name": "Focus Mode",
  "description": "Enable focus mode on Chrome's official Extensions and Chrome Web Store documentation.",
  "version": "1.0",
  "icons": {
    "16": "token.png",
    "32": "token.png",
    "48": "token.png",
    "128": "token.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "token.png",
      "32": "token.png",
      "48": "token.png",
      "128": "token.png"
    }
  },
  "permissions": ["scripting", "tabs", "activeTab", "storage", "offscreen"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}
